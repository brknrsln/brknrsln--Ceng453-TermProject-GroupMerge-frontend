<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="250.0" prefWidth="300.0" style="-fx-background-color: #dcf4dd;" xmlns="http://javafx.com/javafx/18"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ceng453groupmerge.frontend.Controllers.ForgotController">
    <children>
        <Label text="FORGOT PASSWORD" textFill="#1415fa">
            <font>
                <Font name="Calibri Bold" size="30.0"/>
            </font>
        </Label>
        <StackPane prefHeight="45.0" prefWidth="200.0"/>
        <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                   minWidth="-Infinity" prefHeight="40" prefWidth="200.0" promptText="Email">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </TextField>
        <Button fx:id="submitButton" defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="40"
                prefWidth="100" style="-fx-background-color: #1415fa;" text="Send" textAlignment="CENTER"
                textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="10.0"/>
            </VBox.margin>
        </Button>
        <Button fx:id="loginPageButton" mnemonicParsing="false" onAction="#handleSwitchToLoginPage"
                text="Go back to login" textAlignment="CENTER">
            <font>
                <Font size="10.0"/>
            </font>
        </Button>
    </children>
</VBox>
